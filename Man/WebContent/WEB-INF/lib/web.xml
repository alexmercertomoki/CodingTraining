<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>
	test</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>FirstServlet</servlet-name>
		<servlet-class>
			com.soft.action.FirstServlet
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FirstServlet</servlet-name>
		<url-pattern>/First</url-pattern>
	</servlet-mapping>
	
	<!-- 用来控制页面跳转的Servlet -->
	<servlet>
		<servlet-name>ShowPageServlet</servlet-name>
		<servlet-class>
			com.soft.action.ShowPageServlet
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ShowPageServlet</servlet-name>
		<url-pattern>/ShowPage</url-pattern>
	</servlet-mapping>	
	
	<!-- 显示所有用户信息 -->
	<servlet>
		<servlet-name>ShowUsersServlet</servlet-name>
		<servlet-class>
			com.soft.action.ShowUsersServlet
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ShowUsersServlet</servlet-name>
		<url-pattern>/ShowUsers</url-pattern>
	</servlet-mapping>	
	
	<servlet>
		<servlet-name>DelUserServlet</servlet-name>
		<servlet-class>
			com.soft.action.DelUserServlet
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DelUserServlet</servlet-name>
		<url-pattern>/DelUser</url-pattern>
	</servlet-mapping>	
</web-app>
